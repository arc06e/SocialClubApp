<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-4">
            <div class="card text-black shadow-lg">
                <div class="container rounded-4 py-4">
                    <img src="@Model.Image" class="card-img-top" alt="" />
                </div>
                <div class="card-body rounded-3">
                    <form method="post" asp-action="Delete" enctype="multipart/form-data">
                        <div class="text-center">
                            <h2 class="card-title">Are you sure you want to delete this?</h2>
                            <p class="text-muted mb-4">@Model.Title</p>
                        </div>
                        <div>
                            <div class="d-flex justify-content-center">
                                @*<span>City</span>*@<span>@Model.City</span>
                            </div>
                            <div class="d-flex justify-content-center">
                                @*<span>State</span>*@<span>@Model.State</span>
                            </div>
                            <div class="d-flex justify-content-center">
                                @*<span>Type</span>*@<span>@Model.MeetingCategory</span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center text-left text-muted mt-4">
                            <span>@Model.Description</span>
                        </div>
                    </form>
                    <div class="d-flex justify-content-center">
                        <form action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-block text-body btn-lg btn-danger float-right mt-3" />
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
