@using SocialClubApp.ViewModels
@model LoginViewModel

    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">



            <div class="card-body p-5">

              <h2 class="text-uppercase text-center mb-5">Sign In</h2>

              <form method="post">
               <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-outline mb-4">
                  <input asp-for="UserName"class="form-control form-control-lg" />
                  <label asp-for="UserName" class="form-label">Your Username</label>
                  @*<span asp-validation-for="Email" class="text-danger"></span>*@
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="Password" class="form-control form-control-lg" />
                  <label asp-for="Password" class="form-label">Password</label>
                  @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>

                <div class="checkbox form-check d-flex justify-content-center mb-5">
                  <label asp-for="RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="RememberMe" />
                     @Html.DisplayNameFor(m => m.RememberMe)
                  </label>
                </div>

                <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg px-4 me-md-2">Login</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Don't have an account? <a href="/Account/Register" class="fw-bold text-body"><u>Register here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>

