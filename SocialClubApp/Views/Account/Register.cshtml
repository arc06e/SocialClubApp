@using SocialClubApp.ViewModels
@model RegisterViewModel


 <body class="gradient-custom-3"> 
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">



            <div class="card-body p-5">

              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form method="post">
               <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-outline mb-4">
                  <input asp-for="Email" class="form-control form-control-lg" />
                  <label asp-for="Email" class="form-label">Your Email</label>
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="Password" class="form-control form-control-lg" />
                  <label asp-for="Password" class="form-label">Password</label>
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                  <label asp-for="ConfirmPassword" class="form-label">Confirm your password</label>
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary btn-block btn-lg text-body gradient-custom-4">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/Account/Login" class="fw-bold text-body"><u>Login here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
 </body>


