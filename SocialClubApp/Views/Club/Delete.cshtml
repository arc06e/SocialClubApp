@using SocialClubApp.DAL.Enum
@model Club

<div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">



            <div class="card-body p-5">

              <h2 class="text-center mb-5">Are you sure you want to delete this club?</h2>

              <form method="post" asp-action="Delete" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                 <div class="form-outline mb-4">
                   <input asp-for="Title"class="form-control form-control-lg" />
                   <label asp-for="Title" class="form-label">Title</label>
                   <span asp-validation-for="Title" class="text-danger"></span>
                 </div>

               <div class="row form-outline mb-4">
                <div class="col">         
                    <input asp-for="City"class="form-control form-control-lg" />
                    <label asp-for="City" class="form-label">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="State"class="form-control form-control-lg" />
                    <label asp-for="State" class="form-label">State</label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
              </div>

              <div class="form-outline mb-4">
                <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control form-control-lg">
                   <option>--Select--</option>
                </select>
                <label asp-for="ClubCategory" class="form-label">Category</label>
                <span asp-validation-for="ClubCategory" class="text-danger"></span>
              </div>

              <div class="form-outline mb-4">
                  <textarea asp-for="Description" class="form-control form-control-lg" rows="2"></textarea>
                  <label asp-for="Description" class="form-label">Description</label>
                  <span asp-validation-for="Description" class="text-danger"></span>
              </div>          

                <div class="d-flex justify-content-center">
                    <form action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-block text-body btn-lg btn-danger float-right mt-3" />
                    </form>
                </div>
       

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>









