@using SocialClubApp.ViewModels
@model UserDetailsViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-4">
            <div class="card shadow-lg text-black">
                <div class="container rounded-4 py-4 d-flex justify-content-center">
                    <img src="@Model.ProfileImageUrl"
                         class="shadow-1-strong rounded-circle card-img-top" alt="avatar 1"
                         style="width: 175px; height: auto;">
                </div>
                <div class="card-body rounded-3">
                    <div class="text-center">
                        <h1 class="card-title mb-4">@Model.UserName</h1>
                    </div>
                    <div>
                        <div class="d-flex justify-content-center">
                            <span>@Model.Email</span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <span>@Model.City</span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <span>@Model.State</span>
                        </div>                        
                    </div>
                    <div class="text-center text-muted mt-4">
                        @foreach (var claim in Model.Claims)
                        {
                            <div class="d-flex justify-content-center">
                                <p class="badge bg-danger">@claim</p>
                            </div>
                            
                        }
                    </div>
                    @*<div class="d-flex justify-content-center">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block text-body btn-lg gradient-custom-4">Edit</a>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>  