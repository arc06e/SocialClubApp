@using SocialClubApp.DAL.Enum
@using SocialClubApp.ViewModels
@model EditUserViewModel

<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">



                <div class="card-body p-5">

                    <h2 class="text-center mb-5">Edit User</h2>

                    <form method="post" asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" id="Id" name="Id" asp-for="Id" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-outline mb-4">
                            <input asp-for="UserName" class="form-control form-control-lg" />
                            <label asp-for="UserName" class="form-label">Username</label>
                            @*<span asp-validation-for="Title" class="text-danger"></span>*@
                        </div>
                        <div class="form-outline mb-4">                            
                                <input asp-for="Email" class="form-control form-control-lg" />
                                <label asp-for="Email" class="form-label">Email</label>
                                @*<span asp-validation-for="City" class="text-danger"></span>*@                            
                        </div>

                        <div class="row form-outline mb-4">
                            <div class="col">
                                <input asp-for="City" class="form-control form-control-lg" />
                                <label asp-for="City" class="form-label">City</label>
                                @*<span asp-validation-for="City" class="text-danger"></span>*@
                            </div>
                            <div class="col">
                                <input asp-for="State" class="form-control form-control-lg" />
                                <label asp-for="State" class="form-label">State</label>
                                @*<span asp-validation-for="State" class="text-danger"></span>*@
                            </div>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="ProfileImageUrl">Image</label>
                            <input asp-for="Image" type="file" class="form-control" placeholder="Image">
                            @*<span asp-validation-for="Image" class="text-danger"></span>*@
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg px-4 me-md-2">Edit</button>
                        </div>



                    </form>

                </div>
            </div>
        </div>
    </div>
</div>





